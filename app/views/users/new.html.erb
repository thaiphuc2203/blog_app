<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mt-2 mb-2' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control mt-2 mb-2' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mt-2 mb-2' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control mt-2 mb-2' %>

      <%= f.submit "Create my account", class: "btn btn-primary mt-2 mb-2" %>
    <% end %>
  </div>
</div>