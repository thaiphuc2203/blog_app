<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-4 offset-md-4 col-md-4">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control mt-2 mb-3' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mt-2 mb-2' %>

      <%= f.submit "Log in", class: "btn btn-primary  mt-3 mb-3" %>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>